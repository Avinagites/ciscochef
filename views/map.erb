<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>Geocoding service</title>
    <style>
      html, body, #map-canvas {
      height: 100%;
      margin: 0px;
      padding: 0px
      }
      #panel {
      position: absolute;
      top: 5px;
      left: 50%;
      margin-left: -180px;
      z-index: 5;
      background-color: #fff;
      padding: 5px;
      border: 1px solid #999;
      }
    </style>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCOIFjvlaAiWC1LBw72qVNx4S1f2GCF_lA&sensor=false"></script>
    <script>
      var map;
      function initialize() {
        var mapOptions = {
          zoom: 12,
          center: new google.maps.LatLng(37.39, -121.927768)
        }
        map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
        $.ajax({
          type: 'GET',
          url: '/api/places',
          success: function(result) {
            $.each(result, function(i, place) {
              var contentString = '<div id="content">'+
                '<h1 id="firstHeading" class="firstHeading">'+place.name+'</h1>'+
                '<p>The address is <strong>'+place.address+'</strong>. A party of <strong>'+
                place.minparty+'-'+place.maxparty+'</strong> people takes about <strong>'+place.minutes+
                '</strong> minutes.</p>'+'<p><a href="'+place.yelp+'">Yelp Website</a></p>'+
                '</div>'
              var point = new google.maps.LatLng(place.lat,place.long)
              var marker = createMarker(point,contentString)
            });
          }
        });
      }
      
      var infowindow = new google.maps.InfoWindow();
      
      function createMarker(latlng, html) {
        var contentString = html;
        var marker = new google.maps.Marker({
          position: latlng,
          map: map,
          zIndex: Math.round(latlng.lat()*-100000)<<5
        });
      
        google.maps.event.addListener(marker, 'click', function() {
          infowindow.setContent(contentString); 
          infowindow.open(map,marker);
        });
      }
      
      
      google.maps.event.addDomListener(window, 'load', initialize);
      
    </script>
  </head>
  <body>
    <div id="map-canvas"></div>
  </body>
</html>